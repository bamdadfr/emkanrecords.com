{
  "name": "emkanrecords-www",
  "version": "1.15.0",
  "description": "Emkan Records - digital record label from France.",
  "license": "MIT",
  "author": {
    "name": "Bamdad Sabbagh",
    "email": "hello@bamdadsabbagh.com",
    "url": "https://bamdadsabbagh.com/"
  },
  "scripts": {
    "build": "next build && yarn build:post",
    "build:post": "yarn build:post:remove-source-maps && yarn build:post:build-sitemap",
    "build:post:build-sitemap": "next-sitemap",
    "build:post:remove-source-maps": "find .next -type f -name \"*.map\" -exec rm {} \\;",
    "clean": "yarn next:clean && yarn package:clean",
    "dev": "yarn next:clean && next dev",
    "export": "next export",
    "lint": "yarn lint:es",
    "lint:es": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "lint:style": "yarn lint:style:components && yarn lint:style:pages",
    "lint:style:components": "stylelint 'src/components/**/*.{css,scss,js,jsx,ts,tsx}' --fix",
    "lint:style:pages": "stylelint 'src/pages/**/*.{css,scss,js,jsx,ts,tsx}' --fix",
    "next:clean": "rimraf .next",
    "package:clean": "rimraf node_modules",
    "package:reinstall": "yarn clean && yarn",
    "package:sort": "npx sort-package-json",
    "start": "next start",
    "test": "jest",
    "test:cov": "yarn test:coverage",
    "test:coverage": "jest --coverage && codecov",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@react-spring/web": "^9.4.5",
    "@sentry/nextjs": "^6.19.7",
    "next": "12.1.6",
    "prop-types": "^15.7.2",
    "react": "18.1.0",
    "react-dom": "18.1.0"
  },
  "devDependencies": {
    "@bamdadsabbagh/eslint-config": "^2.0.26",
    "@fontsource/roboto": "^4.5.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.2.0",
    "@testing-library/react-hooks": "^8.0.0",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "babel-jest": "^28.1.0",
    "codecov": "^3.8.2",
    "eslint-config-next": "^12.1.6",
    "jest": "^28.1.0",
    "jest-css-modules": "^2.1.0",
    "next-sitemap": "^2.5.20",
    "react-icons": "^4.2.0",
    "rimraf": "^3.0.2",
    "sass": "^1.54.6",
    "sass-reset": "^1.0.2"
  }
}
