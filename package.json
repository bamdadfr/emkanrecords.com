{
  "name": "emkanrecords-www",
  "version": "2.0.2",
  "description": "Emkan Records - digital record label from France.",
  "license": "MIT",
  "author": {
    "name": "Bamdad Sabbagh",
    "email": "hello@bamdadsabbagh.com",
    "url": "https://bamdadsabbagh.com/"
  },
  "scripts": {
    "build": "next build && pnpm build:post",
    "build:post": "pnpm build:post:remove-source-maps && yarn build:post:build-sitemap",
    "build:post:build-sitemap": "next-sitemap",
    "build:post:remove-source-maps": "find .next -type f -name \"*.map\" -exec rm {} \\;",
    "clean": "pnpm next:clean && yarn package:clean",
    "dev": "pnpm next:clean && next dev",
    "export": "next export",
    "lint": "pnpm lint:es",
    "lint:es": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "lint:style": "pnpm lint:style:components && yarn lint:style:pages",
    "lint:style:components": "stylelint 'src/components/**/*.{css,scss,js,jsx,ts,tsx}' --fix",
    "lint:style:pages": "stylelint 'src/pages/**/*.{css,scss,js,jsx,ts,tsx}' --fix",
    "next:clean": "rimraf .next",
    "package:clean": "rimraf node_modules",
    "package:reinstall": "pnpm clean && yarn",
    "package:sort": "npx sort-package-json",
    "start": "next start",
    "test": "jest",
    "test:cov": "pnpm test:coverage",
    "test:coverage": "jest --coverage && codecov",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@react-spring/web": "^9.7.3",
    "@sentry/nextjs": "^7.80.0",
    "next": "14.0.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@fontsource/roboto": "^5.0.8",
    "@next/eslint-plugin-next": "^14.0.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "babel-jest": "^29.7.0",
    "codecov": "^3.8.3",
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.7.0",
    "jest-css-modules": "^2.1.0",
    "jest-environment-jsdom": "^29.7.0",
    "next-sitemap": "^4.2.3",
    "react-icons": "^4.11.0",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "sass-reset": "^1.0.4",
    "typescript": "^5.2.2"
  }
}
