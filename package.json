{
  "name": "emkanrecords-www",
  "version": "2.1.0",
  "description": "Emkan Records - digital record label from France.",
  "license": "MIT",
  "author": {
    "name": "Bamdad Sabbagh",
    "email": "hello@bamdadsabbagh.com",
    "url": "https://bamdadsabbagh.com/"
  },
  "scripts": {
    "build": "next build && pnpm build:post",
    "build:post": "pnpm build:post:remove-source-maps && pnpm build:post:build-sitemap",
    "build:post:build-sitemap": "next-sitemap",
    "build:post:remove-source-maps": "find .next -type f -name \"*.map\" -exec rm {} \\;",
    "clean": "pnpm next:clean && pnpm package:clean",
    "dev": "pnpm next:clean && next dev",
    "export": "next export",
    "lint": "pnpm lint:es",
    "lint:es": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "lint:style": "pnpm lint:style:components && pnpm lint:style:pages",
    "lint:style:components": "stylelint 'src/components/**/*.{css,scss,js,jsx,ts,tsx}' --fix",
    "lint:style:pages": "stylelint 'src/pages/**/*.{css,scss,js,jsx,ts,tsx}' --fix",
    "next:clean": "rimraf .next",
    "package:clean": "rimraf node_modules",
    "package:reinstall": "pnpm clean && pnpm",
    "package:sort": "npx sort-package-json",
    "start": "next start",
    "test": "jest",
    "test:cov": "pnpm test:coverage",
    "test:coverage": "jest --coverage && codecov",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@react-spring/web": "^9.7.4",
    "@sentry/nextjs": "^8.33.1",
    "next": "14.2.14",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@fontsource/roboto": "^5.1.0",
    "@next/eslint-plugin-next": "^14.2.14",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.13",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.2.14",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "jest-css-modules": "^2.1.0",
    "jest-environment-jsdom": "^29.7.0",
    "next-sitemap": "^4.2.3",
    "react-icons": "^5.3.0",
    "rimraf": "^6.0.1",
    "sass": "^1.79.4",
    "sass-reset": "^1.0.4",
    "typescript": "^5.6.2"
  }
}
